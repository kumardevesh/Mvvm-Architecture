<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="32dp"
        android:layout_height="match_parent">


    <TextView
            android:id="@+id/tv_author_label"
            android:text="Author Details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_author_label"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView android:id="@+id/tv_user_name"
              android:layout_marginTop="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/iv_image"
              android:layout_width="wrap_content"
              tools:text="userName"
              android:layout_height="wrap_content"/>


    <TextView android:id="@+id/tv_handle_name"
              android:layout_marginTop="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
              android:layout_width="wrap_content"
              tools:text="handleName"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tv_user_url"
              android:layout_marginTop="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_handle_name"
              android:layout_width="wrap_content"
              tools:text="userurl"
              android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_repo_label"
            android:text="Repo Details"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_url"
            android:layout_marginTop="64dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView android:id="@+id/tv_repo_name"
              android:layout_width="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_repo_label"
              tools:text="repoName"
    />


    <TextView android:id="@+id/tv_repo_url"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_repo_name"
              tools:text="repoUrl"
    />

    <TextView android:id="@+id/tv_repo_description"
              android:layout_marginTop="8dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_repo_url"
              tools:text="repoDescription"
    />


</androidx.constraintlayout.widget.ConstraintLayout>